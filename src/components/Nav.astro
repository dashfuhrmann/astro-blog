---
import { Icon } from "astro-icon";
import Link from "../components/Link.astro";

interface INavItem {
  name: string;
  path: string;
}

const navData: INavItem[] = [
  {
    name: "About",
    path: "/about/",
  },
  {
    name: "Blog",
    path: "/blog/",
  },
];
---

<nav>
  <div
    class="max-w-1500 flex w-full justify-between bg-white p-4 align-middle shadow-xl shadow-indigo-300"
  >
    <a href="/" aria-label="Go home"><Icon name="logomark" width="60" /></a>
    <ul class="flex items-center space-x-6">
      {
        navData.map((item) => (
          <Link
            text={item.name}
            href={item.path}
            classes="underline"
            data-navlink
          />
        ))
      }
    </ul>
  </div>
</nav>

<script>
  import "../js/nav.js";
</script>
