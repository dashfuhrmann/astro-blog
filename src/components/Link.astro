---
import { Icon } from "astro-icon";

interface Props {
  text: string;
  href: string;
  isFilled?: boolean;
  borderVisible?: boolean;
  classes?: string;
  icon?: {
    name: string;
    side: "left" | "right";
  };
}

const {
  text,
  href,
  icon,
  isFilled = true,
  borderVisible = true,
  classes,
  ...rest
} = Astro.props as Props;
---

<a href={href} class={`${classes} link inline-flex space-x-2`} {...rest}>
  {
    icon && icon.side === "left" && (
      <Icon name={icon.name} height="24" width="24" />
    )
  }
  <span>{text}</span>
  {
    icon && icon.side === "right" && (
      <Icon name={icon.name} height="24" width="24" />
    )
  }
</a>
