---
import Link from "./Link.astro";

const { prevUrl, nextUrl } = Astro.props;
---

<nav aria-label="Blog pages">
  <div class="flex flex-row justify-center space-x-4">
    {
      prevUrl && (
        <Link
          text="Previous"
          href={prevUrl}
          icon={{
            name: "tabler:arrow-big-left-line",
            side: "left",
          }}
          classes="bg-primary rounded-md max-w-fit p-2 text-lg text-white min-w-[150px] items-center justify-center"
        />
      )
    }
    {
      nextUrl && (
        <Link
          text="Next"
          href={nextUrl}
          icon={{
            name: "tabler:arrow-big-right-line",
            side: "right",
          }}
          classes="bg-primary rounded-md max-w-fit p-2 text-lg text-white min-w-[150px] items-center justify-center"
        />
      )
    }
  </div>
</nav>
